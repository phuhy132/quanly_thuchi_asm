<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:background="@android:color/holo_orange_light"
    android:gravity="center"
    android:text="Sửa Phân Loại"
    android:id="@+id/tw_phanloai"
    android:textSize="35sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:hint="Tên Loại"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_update_PhanLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout


        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <AutoCompleteTextView
            android:id="@+id/spinner_update_PhanLoai"
            android:hint="CHọn Trạng Thái"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:inputType="none"
            />
    </com.google.android.material.textfield.TextInputLayout>
<!--    <Spinner-->
<!--        android:layout_height="56dp"-->
<!--        android:id="@+id/spinner_add_PhanLoai"-->
<!--        android:layout_width="match_parent"-->
<!--        />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Btn_update_Phanloai"
            android:text="Sửa mới"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"/>
        <Button
            android:id="@+id/Btn_cancel_update_Phanloai"
            android:text="Hủy bỏ"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"/>
    </LinearLayout>

</LinearLayout>