<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:background="@android:color/holo_orange_light"
    android:gravity="center"
    android:text="Thêm Giao Dịch"
    android:id="@+id/tw_phanloai"
    android:textSize="35sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:hint="Tiêu Đề"
        android:id="@+id/edt_add_Tieude"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:hint="Nhập số tiền"
        android:id="@+id/edt_add_Tien"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:hint=" Chọn Ngày"


        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_add_ngay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:hint="Mô Tả"
        android:id="@+id/edt_add_Mota"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_Add_GD"
            android:hint="CHọn Trạng Thái"
            android:layout_width="match_parent"
            android:layout_height="56dp"

            />

<!--    <Spinner-->
<!--        android:layout_height="56dp"-->
<!--        android:id="@+id/spinner_add_PhanLoai"-->
<!--        android:layout_width="match_parent"-->
<!--        />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Btn_add_GD"
            android:text="Thêm mới"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"/>
        <Button
            android:id="@+id/Btn_cancel_GD"
            android:text="Hủy bỏ"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"/>
    </LinearLayout>

</LinearLayout>